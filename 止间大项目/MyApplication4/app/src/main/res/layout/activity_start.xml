<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".StartActivity">
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id ="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="20sp"
            android:layout_marginRight="80dp"
            android:textColor="#86000000"/>
        <TextView
            android:id ="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="20sp"
            android:layout_marginRight="80dp"
            android:textColor="#86000000"/>
        <TextView
            android:id ="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="20sp"

            android:textColor="#86000000"/>



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/table1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:focusable="true"
            android:src = "@drawable/table2"/>
        <ImageView
            android:id="@+id/table2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:src = "@drawable/table2"/>
        <ImageView
            android:id="@+id/table3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:src = "@drawable/table2"/>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:src="@drawable/carpet" />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:src = "@drawable/bookrack"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:src = "@drawable/bookrack"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src = "@drawable/bookrack"/>
    </LinearLayout>

    <ImageView
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:src = "@drawable/carpet"/>

    <LinearLayout

        android:layout_marginLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
       >

        <ImageView
            android:id="@+id/table4"
            android:layout_marginTop="0dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:src="@drawable/table2" />

        <ImageView
            android:id="@+id/table5"
            android:layout_marginTop="0dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:src = "@drawable/table2"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <TextView
        android:id ="@+id/number4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="20sp"
        android:layout_marginRight="95dp"
        android:textColor="#86000000"/>
    <TextView
        android:id ="@+id/number5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="20sp"

        android:textColor="#86000000"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/sit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:src = "@drawable/sit"/>
            <ImageView
                android:id="@+id/left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:src = "@drawable/left"/>
            <ImageView
                android:id="@+id/navigation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:src = "@drawable/rocket"/>
            <ImageView
                android:id="@+id/recommand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src = "@drawable/recommend"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="落座"
            android:textSize="20sp"
            android:layout_marginRight="42dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离开"
            android:textSize="20sp"
            android:layout_marginRight="42dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航"
            android:textSize="20sp"
            android:layout_marginRight="42dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="推荐"
            android:textSize="20sp"
            android:textColor="#000000"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
            <TextView
                android:id="@+id/mainPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginRight="60dp"
                android:textColor="#2196F3"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"
                android:layout_marginRight="60dp"
                android:textColor="#000000"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/myPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="#000000"
                android:textSize="25sp" />


    </LinearLayout>

</LinearLayout>